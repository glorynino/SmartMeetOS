# SmartMeetOS Environment Variables
# Copy this file to .env and fill in your values.

# =============================================================================
# DATABASE (Required)
# =============================================================================
DATABASE_URL=postgresql://user:password@host:5432/dbname

# =============================================================================
# GOOGLE OAUTH (Required for multi-user)
# =============================================================================
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# NYLAS API (Required for Notetaker)
# =============================================================================
NYLAS_API_KEY=
NYLAS_API_BASE=https://api.us.nylas.com

# Webhook signature verification (set this after creating webhook in Nylas dashboard)
NYLAS_WEBHOOK_SECRET=

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# Base URL for OAuth redirects (your Render web service URL)
APP_BASE_URL=https://your-app.onrender.com

# Flask secret key (auto-generated if not set)
FLASK_SECRET_KEY=

# =============================================================================
# LEGACY (single-user mode, optional)
# =============================================================================
# These are only needed if running the old single-user CLI mode
# NYLAS_GRANT_ID=
# GOOGLE_CLIENT_SECRET_FILE=
# GOOGLE_TOKEN_FILE=
# SMARTMEETOS_STATE_DIR=
